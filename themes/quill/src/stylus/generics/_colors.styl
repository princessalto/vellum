$text-emphasis-medium = {
  light: $grey.lighten-4,
  dark: #30383e,
}

.theme--dark {
  .emphasis {
    &--medium {
      background-color: $text-emphasis-medium.dark !important;
    }
  }

  .emphasis {
    &--bg {
      background-color: #232c33 !important;
    }
  }

  .emphasis {
    &--border {
      border-color: #393c3e !important;
    }
  }

  .text-emphasis {
    &--medium {
      color: $text-emphasis-medium.dark !important;
    }
  }
}

.theme--light {
  .emphasis {
    &--medium {
      background-color: $text-emphasis-medium.light !important;
    }
  }

  .emphasis {
    &--bg {
      background-color: #fafafa !important;
    }
  }

  .emphasis {
    &--border {
      border-color: #e4e4e4 !important;
    }
  }

  .text-emphasis {
    &--medium {
      color: $text-emphasis-medium.light !important;
    }
  }
}

.theme--dark {
  .primary--text[class*=active],
  .primary--text[class*=active] .icon,
  .input-group.primary--text,
  .breadcrumbs li:not(:last-child) a {
    color: lighten($theme.primary, 30%) !important;
  }
}

